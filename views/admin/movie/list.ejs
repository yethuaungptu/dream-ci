<!doctype html>
<html lang="en" data-bs-theme="auto">
  <head>
    <% include ../../partialAdmin/head %>
    <!-- Custom styles for this template -->
  </head>
  <body>
    <% include ../../partialAdmin/theme-switcher %>
    
    <% include ../../partialAdmin/header %>

<div class="container-fluid">
  <div class="row">
    <% include ../../partialAdmin/sidebar %>

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Movie List</h1>
      </div>
      <div>
        <table class="table table-striped table-bordered">
          <thead>
            <th>Title</th>
            <th>Cinema</th>
            <th>Director</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Relase Date</th>
            <th>Action</th>
          </thead>
          <tbody>
            <% for(var i= 0; i < movies.length; i++){%>
              <tr>
                <td><%= movies[i].title %></td>
                <td><%= movies[i].cinemaId.name %></td>
                <td><%= movies[i].director %></td>
                <td><%= movies[i].startDate.toISOString().slice(0, 10); %></td>
                <td><%= movies[i].endDate.toISOString().slice(0, 10); %></td>
                <td><%= movies[i].releaseDate.toISOString().slice(0, 10); %></td>
                <td><a href="/admin/movieDetail/<%= movies[i]._id %>" class="btn btn-primary">Detail</a></td>
              </tr>
            <%}%>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>
<script src="/assets/dist/js/bootstrap.bundle.min.js"></script>
</html>
