<!doctype html>
<html lang="en" data-bs-theme="auto">
  <head>
    <% include ../partialAdmin/head %>
    <!-- Custom styles for this template -->
  </head>
  <body>
    <% include ../partialAdmin/theme-switcher %>
    
    <% include ../partialAdmin/header %>

<div class="container-fluid">
  <div class="row">
    <% include ../partialAdmin/sidebar %>

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2 text-center">Dashboard</h1>
        
      </div>
      <div class="container">
        <div class="row">
          <div class="col-lg-3 col-md-6 col-sm-12">
            <div class="card bg-success">
              <div class="card-body">
                <div class="card-title">Total Cinemas</div>
                <h3 class="text-center"><%= cinemaCount %></h3>
              </div>
            </div>
          </div>
          <div class="col-lg-3 col-md-6 col-sm-12">
            <div class="card bg-success">
              <div class="card-body">
                <div class="card-title">Total Movie</div>
                <h3 class="text-center"><%= movieCount %></h3>
              </div>
            </div>
          </div>
          <div class="col-lg-3 col-md-6 col-sm-12">
            <div class="card bg-success">
              <div class="card-body">
                <div class="card-title">Total Seats</div>
                <h3 class="text-center"><%= seatCount %></h3>
              </div>
            </div>
          </div>
          <div class="col-lg-3 col-md-6 col-sm-12">
            <div class="card bg-success">
              <div class="card-body">
                <div class="card-title">Total Bookings</div>
                <h3 class="text-center"><%= bookingCount %></h3>
              </div>
            </div>
          </div>
        </div>
        </div>
      </div>
      
    </main>
  </div>
</div>
<script src="/assets/dist/js/bootstrap.bundle.min.js"></script>
</html>
