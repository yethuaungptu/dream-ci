<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
  <head>
    <!-- Custom styles for this template -->
    <% include ./partial/head %>
  </head>
  <body>
    <% include ./partial/theme-changer %> <% include ./partial/header %>

    <main>
      <section class="py-5 text-center container">
        <div class="row py-lg-5">
          <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light"><%= cinema.name %></h1>
            <p class="lead text-body-secondary"><%= cinema.address %></p>
            <p>
              <a href="tel:<%= cinema.phone %>" class="btn btn-primary my-2"
                ><%= cinema.phone %></a
              >
            </p>
          </div>
        </div>
      </section>
      <div class="album py-5 bg-body-tertiary">
        <div class="container">
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <% for(var i = 0; i < movies.length; i++){%>
            <div class="col">
              <div class="card shadow-sm">
                <img
                  src="<%= movies[i].poster %>"
                  class="card-img-top"
                  alt=""
                />
                <div class="card-body">
                  <p class="card-text"><%= movies[i].title %></p>
                  <div
                    class="d-flex justify-content-between align-items-center"
                  >
                    <div class="btn-group">
                      <a
                        href="/moviedetail/<%= movies[i]._id %>"
                        class="btn btn-sm btn-outline-primary"
                      >
                        More Detail
                      </a>
                    </div>
                    <small class="text-body-secondary"
                      ><%= movies[i].duration %></small
                    >
                  </div>
                </div>
              </div>
            </div>
            <%}%>
          </div>
        </div>
      </div>

      <hr class="featurette-divider" />

      <!-- /END THE FEATURETTES -->
      <!-- /.container -->

      <!-- FOOTER -->
      <footer class="container">
        <p class="float-end"><a href="#">Back to top</a></p>
        <p>
          &copy; 2017â€“2023 Company, Inc. &middot;
          <a href="#">Privacy</a> &middot; <a href="#">Terms</a>
        </p>
      </footer>
    </main>
    <script src="/assets/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
